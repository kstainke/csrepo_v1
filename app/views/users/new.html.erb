<div class="depot-form">

<% form_for(@user) do |f| %>
  <%= f.error_messages %>
  
  <fieldset>
  <legend>Enter User Details</legend>
  
  <div>
    <%= f.label "First Name" %>:
    <%= f.text_field :fname, :size => 40 %>
  </div>
  
  <div>
    <%= f.label "Last Name" %>:
    <%= f.text_field :lname, :size => 40 %>
  </div>
  
  <div>
    <%= f.label :user_level %>:
    <%= f.select( :user_level, { "User (View Only Privileges)" => 'f', "Admin (Full Access)" => 't'}) %>
  </div>
  
  <div>
    <%= f.label "Desired Username" %>:
    <%= f.text_field :name, :size => 40 %>
  </div>
  
  <div>
    <%= f.label :user_password, 'Password' %>:
    <%= f.password_field :password, :size => 40 %>
  </div>
  
  <div>
    <%= f.label :user_password_confirmation, 'Confirm' %>:
    <%= f.password_field :password_confirmation, :size => 40 %>
  </div>
  
  <div>
    <%= f.submit "Add User", :class => "submit" %>
  </div>
  
  </fieldset>
<% end %>

</div>